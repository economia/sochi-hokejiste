@import colors
@import prefixes
@import extraIg
@import Tooltip

.ig
    @import basics

.ig
    width 998px
    background #888
    margin-top 20px

    div.content
        position absolute
        top 22px
        left 31px

    div.sider
        position absolute
        top 22px
        left 0px

    div.header
        position absolute
        top 0px
        left 31px

    div.cell
        position absolute
        width 37px
        height 37px
        border-radius 3px
        &.empty
            border-top 1px dotted #ccc
            border-radius 0px
            width 39px
            margin-top -1px

    div.head
    div.side
        position absolute
        width 22px
        height 14px
        border 1px solid #ddd
        background-position center center
        background-repeat no-repeat

    div.head
        top 0px
        margin-left 8px

    div.side
        left 0px
        margin-top 11px

    for abbr in us ca ru sw fi cz sk uk lo be ne swe de ka au no fr sl it
        .ico.{abbr}
            src = abbr + ".png"
            background-image iurl(src)

